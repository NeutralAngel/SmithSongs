<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :venue_id %><br />
    <%= f.collection_select :venue_id, Venue.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :steve_show %><br />
    <%= f.check_box :steve_show, checked: true %>
  </div>
  <div class="field">
    <%= f.label :event_date %><br />
    <%= f.text_field :event_date %>
  </div>
  <div class="field">
    <%= f.label :begin_time %><br />
    <%= f.time_select :begin_time, {ampm: true, :default => {  :hour => 22, :minute => 0 }, minute_step: 15} %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br />
    <%= f.time_select :end_time, {ampm: true, :default => {  :hour => 1, :minute => 0 }, minute_step: 15} %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
