<section class="event <%= "steve_show" if @event.steve_show %>">
<p>
  <b>Title:</b>
  <%= @event.title %>
</p>

<p>
  <b>Description:</b>
  <%= @event.description %>
</p>

<p>
  <b>Event date:</b>
  <%= @event.event_date.strftime("%_m/%-d/%Y") %>
</p>
<p id="notice"><%= notice %></p>

<p>
  <b>Begin time:</b>
  <%= @event.begin_time.strftime("%l:%M %p") %>
</p>

<p>
  <b>End time:</b>
  <%= @event.end_time.strftime("%l:%M %p") %>
</p>

<p>
  <b>Venue:</b>
  <%= @event.venue.name %>
</p>
<%= link_to 'Edit', edit_event_path(@event) %> 
</section>
