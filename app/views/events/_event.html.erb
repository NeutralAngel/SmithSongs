<section class="event <%= "steve_show" if @event.steve_show %>">

<div id="event_side">
<p>
  <b>Title:</b>
  <%= @event.title %>
</p>

<p>
  <b>Description:</b>
  <%= @event.description %>
</p>

<p>
  <b>Event date:</b>
  <%= @event.event_date.strftime("%_m/%-d/%Y") %>
</p>
<p id="notice"><%= notice %></p>

<p>
  <b>Begin time:</b>
  <%= @event.begin_time.strftime("%l:%M %p") %>
</p>

<p>
  <b>End time:</b>
  <%= @event.end_time.strftime("%l:%M %p") %>
</p>
<%= link_to 'Edit', edit_event_path(@event) %> | <%= link_to 'Destroy', @event, method: :delete, remote: true, class: "delete_event", data: { confirm: 'Are you sure?' } %>
</div>
<% @venue = @event.venue %>
<div id="venue_side">
<%= render @venue %>
</div>

</section>

