<!DOCTYPE html>
<html>
<head>
  <title>Smithsongs</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "jplayer.pink.flag", :media => "all" %>
  <%= javascript_include_tag "application", "jquery.jplayer.min", "jplayer.playlist.min", "mbScrollable.js", "jquery.backgroundSize.js" %>
  <%= csrf_meta_tags %>
</head>

<body>

  <%= render "layouts/music_player" %>
  <%= render "layouts/navigation" %>

  <div id="container">
    <div id="sidebar">
      <%= render "layouts/currentEvents" %>
      <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
          <%= render @cart %>
      <% end %>
    </div>
    <div id="main">
      <div id="page" data-pjax-container>
        <%= yield %>
      </div>
    </div>
  </div>



</body>
</html>